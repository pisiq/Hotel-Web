@model Hotel.ViewsModels.SignModel
@{
    ViewData["Title"] = "Sign In";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="hero">
    <div class="container my-5">
        <div class="row m-md-4">
            <h2 class="text-center">Sign in</h2>
        </div>
        <div class="card p-4 shadow-lg default">
            <form method="post" asp-controller="Users" asp-action="Sign">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="mb-3">
                    <label class="form-label" asp-for="Email"></label>
                    <input class="form-control" asp-for="Email" placeholder="ex:Email@gmail.com" required type="text">
                </div>

                <div class="mb-3">
                    <label class="form-label" asp-for="Name"></label>
                    <input class="form-control" asp-for="Name" placeholder="Ion Popescu-Andrei" required type="text">
                </div>

                <div class="mb-3">
                    <label class="form-label" asp-for="Phone"></label>
                    <input class="form-control" asp-for="Phone" placeholder="ex:+40 xxx xxx xxx" required type="text">
                </div>

                <div class="mb-3">
                    <label class="form-label" asp-for="Password"></label>
                    <input class="form-control" asp-for="Password" placeholder="Password" required type="password">
                </div>

                <div class="mb-3">
                    <h6>Already have an account?</h6>
                    <a class="nav-link" asp-controller="Home" asp-action="Login">Login</a>
                </div>

                <button class="btn btn-warning btn-outline-danger w-100" type="submit">Sign Up</button>
            </form>
        </div>
    </div>
</div>
