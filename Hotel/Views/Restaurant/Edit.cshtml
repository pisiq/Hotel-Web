@model Hotel.ViewsModels.RestaurantViewModel

@{
    ViewData["Title"] = "Edit Menu Item";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="hero">
    <div class="container mt-5 pt-4">
        <div class="d-flex justify-content-between align-items-center mb-4">
            <h1>Edit Menu Item</h1>
            <a asp-action="Index" class="btn btn-secondary">
                <i class="bi bi-arrow-left me-2"></i>Back to List
            </a>
        </div>

        <div class="row">
            <div class="col-md-6">
                <div class="card shadow">
                    <div class="card-header bg-primary text-white">
                        <h5 class="mb-0">Edit restaurant menu item</h5>
                    </div>
                    <div class="card-body">
                        <form asp-action="Edit" method="post">
                            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                            <input type="hidden" asp-for="Id" />

                            <div class="mb-3">
                                <label asp-for="LocationId" class="form-label">Location</label>
                                <select asp-for="LocationId" class="form-select" asp-items="Model.Locations"></select>
                                <span asp-validation-for="LocationId" class="text-danger"></span>
                            </div>

                            <div class="mb-3">
                                <label asp-for="DishId" class="form-label">Dish</label>
                                <select asp-for="DishId" class="form-select" asp-items="Model.Dishes"></select>
                                <span asp-validation-for="DishId" class="text-danger"></span>
                            </div>

                            <div class="mb-3">
                                <button type="submit" class="btn btn-warning btn-outline-danger">
                                    <i class="bi bi-save me-2"></i>Save Changes
                                </button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
