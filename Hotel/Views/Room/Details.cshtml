@model Hotel.Models.Room

@{
    ViewData["Title"] = $"Room Details - {Model.Type}";
}
<div class="hero">
<div class="container mt-4">
    <div class="mb-4">
        <h1>@Model.Type</h1>
        <a asp-action="Index" class="btn btn-secondary">Back to List</a>
		@if (User.IsInRole("Admin"))
		{
            <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-primary">Edit</a>
		}
    </div>

    <div class="row">
        <div class="col-md-6">
            @if (!string.IsNullOrEmpty(Model.MainPhotoPath))
            {
                    <img src="@Model.MainPhotoPath" class="img-fluid rounded mb-3" alt="@Model.Type">
            }

            <div class="row">
                @foreach (var photo in Model.Photos.OrderBy(p => p.DisplayOrder))
                {
                        <div class="col-4 mb-3">
                            <img src="@photo.FilePath" class="img-fluid rounded" alt="@photo.Caption">
                        </div>
                }
            </div>
        </div>

        <div class="col-md-6">
            <div class="card">
                <div class="card-body">
                    <dl class="row">
                        <dt class="col-sm-4">Type</dt>
                        <dd class="col-sm-8">@Model.Type</dd>
                        <dt class="col-sm-4">Location</dt>
                        <dd class="col-sm-8">@(Model.Location?.Name ?? "N/A")</dd>
                        <p class="fw-bold">@Model.Price.ToString("C") <span class="text-muted fw-normal">per night</span></p>
                        <div class="d-grid gap-2">
                            @if (Model.RoomCount > 0)
                            {
                                <a asp-controller="Booking" asp-action="Create" asp-route-roomId="@Model.Id" class="btn btn-primary">
                                    Book Now
                                </a>
                            }
                            else
                            {
                                <button class="btn btn-secondary" disabled>No Availability</button>
                            }
                    </dl>

                    <h4>Description</h4>
                    <p>@Model.Description</p>
                </div>
            </div>
        </div>
    </div>
</div>
</div>
