@model IEnumerable<Hotel.Models.Location>

@{
    ViewData["Title"] = "Restaurant Locations";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="hero">
    <div class="container mt-5 pt-4">
        <h1 class="text-center mb-4">Our Restaurant Locations</h1>

        <div class="row row-cols-1 row-cols-md-2 row-cols-lg-3 g-4">
            @foreach (var location in Model)
            {
                <div class="col">
                    <div class="card h-100 shadow-sm">
                        <div class="card-header bg-primary text-white">
                            <h5 class="mb-0">@location.Name</h5>
                        </div>
                        <div class="card-body d-flex flex-column">
                            <div class="text-center mb-3">
                                <i class="bi bi-geo-alt-fill text-primary" style="font-size: 3rem;"></i>
                            </div>
                            <p class="card-text">
                                Explore our delicious menu offerings at @location.Name.
                            </p>
                            <div class="mt-auto text-center">
                                <a asp-controller="Restaurant"
                                   asp-action="MenuByLocation"
                                   asp-route-locationId="@location.Id"
                                   class="btn btn-primary">
                                    <i class="bi bi-menu-button-wide me-2"></i>View Menu
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</div>