@model Hotel.ViewsModels.ProfileViewModel
@{
    ViewData["Title"] = "Profile";
}

<div class="hero">
    <div class="container my-5">
        <div class="row m-md-4">
            <h2 class="text-center">User Profile</h2>
        </div>
        <div class="card p-4 shadow-lg default">
            <div class="row">
                <div class="col-md-4 text-center mb-3">
                    @if (!string.IsNullOrEmpty(Model.ProfilePicturePath))
                    {
                        <img src="@Url.Content(Model.ProfilePicturePath)" alt="Profile Picture" class="img-fluid rounded-circle" style="max-width: 200px;" />
                    }
                    else
                    {
                        <img src="~/images/default-profile.png" alt="Default Profile" class="img-fluid rounded-circle" style="max-width: 200px;" />
                    }

                    <form asp-action="UploadProfilePicture" method="post" enctype="multipart/form-data" class="mt-3">
                        <div class="form-group">
                            <label asp-for="ProfilePicture" class="sr-only"></label>
                            <input asp-for="ProfilePicture" type="file" class="form-control-file" accept="image/*" />
                            <span asp-validation-for="ProfilePicture" class="text-danger"></span>
                        </div>
                        <button type="submit" class="btn btn-sm btn-primary mt-2">Update Picture</button>
                    </form>
                </div>
                <div class="col-md-8">
                    <div class="mb-3">
                        <h4>Welcome, @Model.FirstName @Model.LastName!</h4>
                    </div>
                    <div class="mb-3">
                        <p><strong>Email:</strong> @Model.Email</p>
                        <!-- Add more profile information as needed -->
                    </div>
                    <a class="btn btn-warning btn-outline-danger" asp-controller="Users" asp-action="Logout">Logout</a>
                </div>
            </div>
        </div>
    </div>
</div>
